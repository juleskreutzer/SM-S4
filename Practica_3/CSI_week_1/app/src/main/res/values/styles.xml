<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.Background" parent="AppTheme">
        <item name="android:background">@drawable/background</item>
    </style>

    <!-- TextView -->
    <style name="TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextView.start" parent="TextView">
        <item name="android:gravity">start</item>
    </style>

    <style name="TextView.end" parent="TextView">
        <item name="android:gravity">end</item>
    </style>


    <!-- Image style -->
    <style name="Image"></style>

    <style name="Image.center" parent="Image">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Image.Source" parent="Image"></style>

    <style name="Image.Source.Niels" parent="Image.center">
        <item name="android:src">@drawable/niels</item>
        <item name="android:paddingTop">75dp</item>
        <item name="android:description">@string/suspectPhotoDescription</item>
    </style>


    <!-- Linear Layout -->
    <style name="LinearLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="LinearLayout.vertical" parent="LinearLayout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="LinearLayout.horizontal" parent="LinearLayout">
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="LinearLayout.centerVertical" parent="LinearLayout.horizontal">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="LinearLayout.centerHorizontal" parent="LinearLayout.vertical">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="LinearLayout.bottom" parent="LinearLayout.vertical">
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Tableview -->
    <style name="TableLayout">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="TableLayout.center" parent="TableLayout">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <!-- TableRow -->
    <style name="TableRow">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="TableRow.margin" parent="TableRow">
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="ScrollView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">90dp</item>
    </style>

    <style name="Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/buttonshape</item>
    </style>

    <style name="Button.gravity" parent="Button">
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="Button.Top_Start" parent="Button">
        <item name="android:gravity">top|start</item>
        <item name="android:layout_gravity">top|start</item>
    </style>

    <style name="Button.Top_End" parent="Button">
        <item name="android:gravity">top|end</item>
        <item name="android:layout_gravity">top|end</item>
    </style>


</resources>
