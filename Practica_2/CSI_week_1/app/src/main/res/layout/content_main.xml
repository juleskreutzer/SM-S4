<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true">

    <!-- https://www.google.com/design/spec/layout/metrics-keylines.html#metrics-keylines-keylines-spacing -->
    <ImageView
        android:src="@drawable/niels"
        android:contentDescription="@string/suspectPhotoDescription"
        android:paddingTop="75dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal" >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectInfoName"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectInfoName"
                    android:gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectName"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectName"
                    android:gravity="end" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectInfoGender"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectInfoGender"
                    android:gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectGender"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectGender"
                    android:gravity="end" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectInfoAge"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectInfoAge"
                    android:gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectAge"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectAge"
                    android:gravity="end" />

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectInfoBounty"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectInfoBounty"
                    android:gravity="start" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectBounty"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectBounty"
                    android:gravity="end" />

            </TableRow>

        </TableLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:gravity="bottom">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorWhite"
                android:text="@string/suspectInfoDetails"
                android:id="@+id/tvSuspectInfoDetails"/>

            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="90dp"
                android:id="@+id/scrollView" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/suspectDetails"
                    android:textColor="@color/colorWhite"
                    android:id="@+id/tvSuspectDetails" />

            </ScrollView>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reportButtonText"
                android:id="@+id/btnReport"
                android:gravity="center_horizontal"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>
    </LinearLayout>
</LinearLayout>

